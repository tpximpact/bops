<%= render "planning_applications/assessment_dashboard" do %>
  <% if current_user.assessor? %>
    <% content_for :title, t("#{@planning_application.status}.proposal_step") %>
    <%=
      render "assessor_decision_form",
        planning_application: @planning_application,
        decision: @decision,
        policy_evaluation: @planning_application.policy_evaluation
    %>
  <% else %>
    <% content_for :title, t("#{@planning_application.status}.proposal_step") %>
    <%=
      render "reviewer_decision_form",
        planning_application: @planning_application,
        decision: @decision,
        policy_evaluation: @planning_application.policy_evaluation,
        assessor_decision: @planning_application.assessor_decision
    %>
  <% end%>
<% end%>
