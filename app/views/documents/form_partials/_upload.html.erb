<% if @document.new_record? %>
  <%= form.govuk_file_field(
        :file,
        label: {text: t(".upload_a_file")}
      ) %>
<% else %>
  <%= form.govuk_file_field(
        :file,
        label: {text: t(".upload_a_replacement"), size: "m"},
        hint: {text: t(".a_replacement_file")}
      ) %>
<% end %>
