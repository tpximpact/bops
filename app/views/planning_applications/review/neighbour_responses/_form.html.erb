<%= form_with scope: :review, model: neighbour_review, url: planning_application_review_consultation_neighbour_responses_path(planning_application, planning_application.consultation) do |form| %>
  <%= form.govuk_error_summary %>

  <%= form.govuk_radio_buttons_fieldset(:action, small: true, legend: {size: "s", text: "Do you accept that notifications have been completed?"}) do %>
      <%= form.govuk_radio_button :action, "accepted", label: {text: "Accept"}, link_errors: true %>
      <%= form.govuk_radio_button :action, "rejected", label: {text: "Return with comments"} do %>
        <%= form.govuk_text_area :comment, label: {text: "Explain why notifications are incomplete."} %>
      <% end %>
  <% end %>

  <%= form.submit "Save and mark as complete", class: "govuk-button", data: {module: "govuk-button"} %>
<% end %>
