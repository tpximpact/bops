<% planning_application.policy_classes.each do |policy_class| %>
  <%= render TaskListItems::Reviewing::Component.new do |c| %>
    <% c.with_link do %>
      <%= render(Reviewing::PolicyClass::LinkComponent.new(policy_class: policy_class)) %>
    <% end %>

    <% c.with_tag do %>
      <div class="govuk-task-list__status app-task-list__task-tag">
      <%= render(
            StatusTags::ReviewComponent.new(
              review_item: policy_class.current_review
            )
          ) %>
      </div>
    <% end %>
  <% end %>
<% end %>
