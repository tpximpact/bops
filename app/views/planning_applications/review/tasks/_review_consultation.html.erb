<%= bops_task_accordion(id: "review-consultation") do |accordion| %>
  <% accordion.with_heading(text: "Review consultation") %>
  <%= accordion.with_section(id: "check-neighbour-notifications", expanded: @neighbour_review.errors.any?) do |section| %>
    <% section.with_heading(text: "Check neighbour notifications") %>

    <% section.with_status do %>
      <%= render(
            StatusTags::ReviewComponent.new(
              review_item: @planning_application.consultation.neighbour_review
            )
          ) %>
    <% end %>

    <% section.with_footer do %>
      <%= render(
            partial: "planning_applications/review/neighbour_responses/form",
            locals: {planning_application: @planning_application, neighbour_review: @neighbour_review}
          ) %>
    <% end %>
  <% end %>

  <%= accordion.with_section(id: "check-publicity", expanded: @publicity.errors.any?) do |section| %>
    <% section.with_heading(text: "Check publicity") %>
    <% section.with_status do %>
      <%= render(
            StatusTags::ReviewComponent.new(
              review_item: @planning_application.check_publicity
            )
          ) %>
    <% end %>

    <% section.with_block(id: "site-notice-check") do %>
      <%= render(
            partial: "planning_applications/review/publicities/site_notice",
            locals: {planning_application: @planning_application, site_notice: @planning_application.site_notice}
          ) %>
    <% end %>

    <% section.with_block(id: "press-notice-check") do %>
      <%= render(
            partial: "planning_applications/review/publicities/press_notice",
            locals: {planning_application: @planning_application, press_notice: @planning_application.press_notice}
          ) %>
    <% end %>

    <% section.with_footer(id: "check-publicity-form") do %>
      <%= render(
            partial: "planning_applications/review/publicities/form",
            locals: {planning_application: @planning_application, check_publicity: @publicity}
          ) %>
    <% end %>
  <% end %>
<% end %>
