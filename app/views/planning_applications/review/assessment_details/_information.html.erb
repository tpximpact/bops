<% content_for :page_title do %>
  <%= t(".review_assessment_summaries") %> - <%= t("page_title") %>
<% end %>
<%= render(
      partial: "shared/review_task_breadcrumbs",
      locals: {
        planning_application: @planning_application,
        current_page: t(".review_assessment_summaries")
      }
    ) %>

<%= render(
      partial: "shared/proposal_header",
      locals: {heading: t(".review_assessment_summaries")}
    ) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m"><%= t(".assessor_remarks") %></h2>
    <p class="govuk-body">
      <%= t(".assessor_recommendation", decision: @planning_application.decision) %>
    </p>
    <%= govuk_warning_text(text: t(".this_information_will")) %>
    <%= yield %>
  </div>
</div>
