<%= form_with model: [@planning_application, @review_local_policy],
      url: planning_application_review_local_policy_path(@planning_application, @review_local_policy),
      class: "govuk-!-margin-top-7" do |form| %>
  <%= form.govuk_error_summary %>

  <%= form.govuk_radio_buttons_fieldset :action, legend: {text: t(".legend")} do %>
    <%= form.govuk_radio_button(
          :action, "accepted", checked: @review_local_policy.accepted?, label: {text: t(".yes_label")}
        ) %>
    <%= form.govuk_radio_button(
          :action, "rejected", checked: @review_local_policy.action == "rejected", label: {text: t(".no_label")}
        ) do %>
      <%= form.govuk_text_area(:comment, rows: 6, label: {text: t(".comment_label")}) %>
    <% end %>
  <% end %>

  <%= form.govuk_submit("Save and mark as complete") do %>
    <%= form.govuk_submit("Save and come back later", secondary: true) %>
    <%= govuk_button_link_to("Back", planning_application_review_tasks_path(@planning_application), secondary: true) %>
  <% end %>
<% end %>
