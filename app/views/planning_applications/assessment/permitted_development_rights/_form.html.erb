<%= form_with model: @permitted_development_right,
      url: planning_application_assessment_permitted_development_rights_path(@planning_application),
      method: :patch, class: "govuk-!-margin-top-7" do |form| %>
  <%= form.govuk_error_summary %>

  <%= form.govuk_radio_buttons_fieldset(
        :removed,
        legend: {size: "s"}
      ) do %>
    <%= form.govuk_radio_button(
          :removed, true, checked: @permitted_development_right.removed, label: {text: "Yes"}
        ) do %>
      <%= form.govuk_text_area(
            :removed_reason, rows: 6
          ) %>
    <% end %>

    <%= form.govuk_radio_button(
          :removed, false, checked: @permitted_development_right.removed == false, label: {text: "No"}
        ) %>
  <% end %>

  <%= form.govuk_submit(t("form_actions.save_and_mark_as_complete"), name: "permitted_development_right[status]", value: "complete") do %>
    <%= form.govuk_submit(t("form_actions.save_and_come_back_later"), name: "permitted_development_right[status]", value: "in_progress", secondary: true) %>
    <%= govuk_button_link_to(t("back"), planning_application_assessment_tasks_path(@planning_application), secondary: true) %>
  <% end %>
<% end %>
