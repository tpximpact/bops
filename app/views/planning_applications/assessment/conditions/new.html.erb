<% content_for :page_title do %>
  Add <%= "pre-commencement" if @condition_set.pre_commencement? %> conditions - <%= t("page_title") %>
<% end %>

<%= render(
      partial: "shared/assessment_task_breadcrumbs",
      locals: { planning_application: @planning_application }
    ) %>

<% content_for :title, "Add #{"pre-commencement" if @condition_set.pre_commencement?} conditions" %>

<%= render(
      partial: "shared/proposal_header",
      locals: { heading: "Add #{"pre-commencement" if @condition_set.pre_commencement?} conditions" }
    ) %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= render(
            AccordionComponent.new(
              planning_application: @planning_application,
              sections: %w[constraints considerations]
            )
          ) %>
  <p class="govuk-body govuk-!-margin-top-5">
    <% if @pre_commencement %>
      Add pre-commencement conditions. These will be sent to the applicant for approval. If the applicant does not respond within 10 days these conditions will be auto-approved.
    <% else %>
      Select and add the relevant conditions
    <% end %>
  </p>

  <%= render "shared/warning_text", message: "This information WILL be made publicly available." %>
  <%= render "form" %>
  </div>
</div>
