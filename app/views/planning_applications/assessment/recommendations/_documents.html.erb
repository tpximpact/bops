<div id="decision-notice-documents" class="govuk-!-margin-bottom-7">
  <h3 class="govuk-heading-m"><%= t(".documents_included_in") %></h3>
  <% if documents.any? %>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <ul class="govuk-list">
      <% documents.each do |document| %>
        <li>
          <%= link_to(
                document_name_and_reference(document),
                edit_planning_application_document_path(planning_application, document.id),
                target: :_blank, rel: :noopener
              ) %>
        </li>
        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
      <% end %>
    </ul>
  <% else %>
    <p class="govuk-!-padding-6 govuk-!-margin-bottom-6 background-light-grey">
      <strong><%= t(".no_documents_listed") %></strong>
    </p>
  <% end %>
</div>
