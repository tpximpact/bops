<% if @planning_application.local_policy&.local_policy_areas&.any? %>
  <table class="govuk-table govuk-!-margin-top-5">
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Topic name</th>
      <th scope="col" class="govuk-table__header">Policies consulted</th>
      <th scope="col" class="govuk-table__header">Guidance</th>
      <th scope="col" class="govuk-table__header">Assessment</th>
      <th scope="col" class="govuk-table__header"></th>
    </tr>
    </thead>
    <tbody class="govuk-table__body">
    <% @planning_application.local_policy.local_policy_areas.each do |policy_area| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell govuk-!-padding-top-4">
          <%= link_to policy_area.area, planning_application_assessment_local_policy_area_path(@planning_application, policy_area) %>
        </td>
        <td class="govuk-table__cell govuk-!-padding-top-4">
          <%= policy_area.policies %>
        </td>
        <td class="govuk-table__cell govuk-!-padding-top-4">
          <%= policy_area.guidance if policy_area.guidance.present? %>
        </td>
        <td class="govuk-table__cell govuk-!-padding-top-4">
          <%= policy_area.assessment %>
        </td>
        <td class="govuk-table__cell govuk-!-padding-top-4">
          <%= link_to "Edit", edit_planning_application_assessment_local_policy_area_path(@planning_application, policy_area) %>
          <%= link_to "Remove", planning_application_assessment_local_policy_area_path(@planning_application, policy_area), method: :delete %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="govuk-body">You have not added any considerations</div><br>
<% end %>
