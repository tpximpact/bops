<h2 class="govuk-heading-m govuk-!-margin-top-9 application-step-heading">Assessment</h2>
<%= govuk_task_list(id_prefix: "assess-section", html_attributes: {id: "assess-section"}) do |task_list|
      task_list.with_item(title: t(".check_and_assess"),
        href: @planning_application.validated? && planning_application_assessment_tasks_path(@planning_application)) do |item|
        if @planning_application.validated?
          item.with_status(text: render(StatusTags::CheckAndAssessComponent.new(planning_application: @planning_application)))
        else
          item.with_status(text: "Cannot start yet", cannot_start_yet: true)
        end
      end
    end %>
