<%= render(
      partial: "shared/proposal_header",
      locals: {heading: "Request ownership certificate change"}
    ) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p>
      Certificate type: <%= @planning_application.ownership_certificate.present? ? @planning_application.ownership_certificate.certificate_type.upcase : "Not specified" %>
    </p>

    <%= form_with model: [@planning_application, :validation, @validation_request], scope: :validation_request do |form| %>

      <%= form.govuk_error_summary %>

      <%= form.govuk_text_area(
            :reason,
            label: {
              size: "m",
              text: "Tell the applicant why their ownership certificate type is wrong"
            },
            rows: 5
          ) %>

      <%= form.hidden_field :type, value: "OwnershipCertificateValidationRequest" %>

      <%= render "shared/validation_request_form_actions", form: form, allow_submit: true %>
    <% end %>
  </div>
</div>
