<h2 class="govuk-heading-m">
  Other validation issues
</h2>

<%= govuk_task_list(id_prefix: "other-change-validation-tasks", html_attributes: {id: "other-change-validation-tasks"}) do |task_list|
      render Validation::AddValidationRequestTask.new(@planning_application, task_list:)

      @planning_application.other_change_validation_requests.not_cancelled.each do |other_change_validation_request|
        render Validation::OtherChangeValidationTask.new(
          @planning_application, task_list:,
          request_id: other_change_validation_request.id,
          request_sequence: other_change_validation_request.sequence,
          request_status: other_change_validation_request.state
        )
      end
    end %>
