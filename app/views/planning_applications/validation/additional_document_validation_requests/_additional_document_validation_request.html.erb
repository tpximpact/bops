<td class="govuk-table__cell change-request-list">
  New document
</td>
<% if additional_document_validation_request.cancelled? %>
  <td class="govuk-table__cell change-request-list">
    <%= render(FormattedContentComponent.new(text: additional_document_validation_request.cancel_reason)) %>
  </td>
<% else %>
  <td class="govuk-table__cell change-request-list">
    <%= render(FormattedContentComponent.new(text: additional_document_validation_request.document_request_type)) %>
  </td>
<% end %>
