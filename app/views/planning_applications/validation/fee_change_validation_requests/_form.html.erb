<%= render(
  partial: "shared/proposal_header",
  locals: { heading: "Request other validation change (fee)" }
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render "planning_applications/validation/fee_items/fee_item_table" %>

    <%= form_with model: [@planning_application, :validation, @validation_request] do |form| %>
      <%= form.hidden_field :fee_item, value: @validate_fee %>
      <%= hidden_field_tag(:validate_fee, "yes") %>

      <% if @validation_request.errors.any? %>
        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
          <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
          </h2>
          <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
              <% @validation_request.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <%= form.govuk_text_area(
        :reason,
        label: {
          size: "s",
          class: "govuk-label govuk-label--s",
          text: (t(".labels.summary"))
        },
        rows: 5,
        readonly: @planning_application.validated?
      ) %>

      <%= form.govuk_text_area(
        :suggestion,
        label: {
          size: "s",
          class: "govuk-label govuk-label--s",
          text: (t(".labels.suggestion"))
        },
        hint: { text: "Add all information that they will need to complete this action" },
        rows: 5,
        readonly: @planning_application.validated?
      ) %>

      <%= form.hidden_field :request_type, value: "fee_change" %>

      <%= render "shared/validation_request_form_actions", form: form, allow_submit: true %>
    <% end %>
  </div>
</div>
