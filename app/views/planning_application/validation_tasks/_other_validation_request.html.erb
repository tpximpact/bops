<li id="other-change-validation-tasks">
  <h2 class="app-task-list__section">
    Other validation issues
  </h2>
  <ul class="app-task-list__items">
    <% unless @planning_application.validated? %>
      <li class="app-task-list__item">
        <span class="app-task-list__task-name">
          <%= link_to "Add an other validation request", new_planning_application_other_change_validation_request_path, class: "govuk-link" %>
        </span>
      </li>
    <% end %>
    <% @planning_application.other_change_validation_requests.non_fee_item.not_cancelled.each do |other_change_validation_request| %>
      <li class="app-task-list__item">
        <%= @planning_application.other_change_task_list(other_change_validation_request) %>
      </li>
    <% end %>
  </ul>
</li>
