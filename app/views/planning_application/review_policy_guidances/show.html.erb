<% content_for :page_title do %>
  Review Assess against policies and guidance - <%= t('page_title') %>
<% end %>

<%= render(
  partial: "shared/review_task_breadcrumbs",
  locals: { planning_application: @planning_application  }
) %>

<% content_for :title, "Review Assess against policies and guidance" %>

<%= render(
  partial: "shared/proposal_header",
  locals: { heading: "Review Assess against policies and guidance" }
) %>

<%= render "comment" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-m govuk-!-margin-top-6">
      Which local policies and guidance were looked at? 
    </h2>

    <p class="govuk-body">
      <%= @policy_area.policies %>
    </p>

    <h2 class="govuk-heading-m govuk-!-margin-top-7">
      What is their assessment against those policies? 
    </h2>

    <p class="govuk-body">
      <%= @policy_area.assessment %>
    </p>

    <%= render "form", editable: false %>
  </div>
</div>
