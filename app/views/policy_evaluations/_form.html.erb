<%= form_with model: policy_evaluation, url: planning_application_policy_evaluation_path(@planning_application), local: true, class: "policy_evaluation" do |form| %>
  <div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
      <h2 class="govuk-heading-m">Permitted development requirements</h2>
      <p class="govuk-body"> Does it meet policy requirements?</p>
      <div class="govuk-radios govuk-radios--inline">
        <div class="govuk-radios govuk-radios--small">
          <div class="govuk-radios__item">
            <%= form.radio_button :requirements_met, true, class: "govuk-radios__input" %>
            <%= form.label :requirements_met_true, "Yes", class: "govuk-radios__label" %>
          </div>
          <div class="govuk-radios__item">
            <%= form.radio_button :requirements_met, false, class: "govuk-radios__input" %>
            <%= form.label :requirements_met_false, "No", class: "govuk-radios__label" %>
          </div>
        </div>
      </div>
    </fieldset>

    <%= form.submit "Save", class: "govuk-button", data: { module: "govuk-button" } %>
  </div>
<% end%>
