<%= render(
  layout: "shared/administrator_layout",
  locals: { heading: t(".edit_local_authority") }
) do %>
  <%= form_with(
     model: @local_authority,
     builder: GOVUKDesignSystemFormBuilder::FormBuilder
  ) do |form| %>
    <%= form.govuk_error_summary(presenter: ErrorPresenter) %>
    <%= form.govuk_fieldset(legend: { text: nil }) do %>
      <%= form.govuk_text_field(
         :reviewer_group_email,
         label: { text: t(".reviewer_group_email") },
         class: "govuk-input--width-30"
      ) %>
    <% end %>
    <%= form.govuk_submit(t(".submit")) %>
  <% end %>
<% end %>
