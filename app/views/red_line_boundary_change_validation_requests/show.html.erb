<% content_for :page_title do %>
  Red line boundary validation request - <%= t('page_title') %>
<% end %>

<%= render "validation_requests/validation_requests_breadcrumbs" %>

<% content_for :title, "Red line boundary change" %>

<% if @red_line_boundary_change_validation_request.approved? %>
  <%= render "applicant_approved_response" %>
<% elsif @red_line_boundary_change_validation_request.approved == false %>
  <%= render "applicant_rejected_response" %>
<% else %>
  <%= render "propose_change" %>
<% end %>
