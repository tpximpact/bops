<div class="govuk-accordion__section result_information">
  <div class="govuk-accordion__section-header">
    <h3 class="govuk-accordion__section-heading">
      <button type="button" id="accordion-default-heading-5" aria-controls="accordion-default-heading-5" class="govuk-accordion__section-button" aria-expanded="false">
        Pre-assessment outcome
      </button>
      <span class="govuk-accordion__icon" aria-hidden="true"></span>
    </h3>
  </div>
  <div class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-5" id="results-section">
    <% if @planning_application.result_present? %>
      <h2 class="govuk-heading-m">
        <%= @planning_application.result_flag if @planning_application.result_flag.present? %>
      </h2>

      <% if @planning_application.updated_address_or_boundary_geojson %>
        <%= render "shared/warning_text",
          message: "This application has been updated. The result may no longer be accurate." %>
      <% end %>

      <% if result_feedback = @planning_application.feedback["result"] %>
        <%= render "shared/warning_text",
          message: "The applicant or agent believes this result is inaccurate." %>

        <p class="govuk-body">
          <strong>Reason given:</strong> "<%= result_feedback %>"
        </p>

        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
      <% end %>

      <p class="govuk-body">
        <strong><%= simple_format(@planning_application.result_heading) if @planning_application.result_heading.present? %></strong>
      </p>
      <p class="govuk-body">
        <%= simple_format(@planning_application.result_description) if @planning_application.result_description.present? %>
      </p>
      <% if @planning_application.result_override.present? %>
        <p class="govuk-body">
          The applicant believes this result is <strong>incorrect</strong> because:
        </p>
        <div class="govuk-inset-text">
          <p class="govuk-body">
            <%= @planning_application.result_override %>
          </p>
        </div>
      <% end %>
        <% if @planning_application.flagged_proposal_details(@planning_application.result_flag).present? %>
          <p class="govuk-body">
            <strong> Details identified as relevant to the result</strong>
          </p>
          <ol class="govuk-list">
            <li>
              <% @planning_application.flagged_proposal_details(@planning_application.result_flag).each do |proposal_detail| %>
                <h3 class="govuk-heading-s">
                  <%= display_number(@planning_application.proposal_details, proposal_detail) %>.
                  <%= proposal_detail["question"] %>
                </h3>
               <p class="govuk-body">
                <% proposal_detail["responses"].each do |response| %>
                  <%= response["value"] %>
                <% end %>
              </p>
              <% end %>
            </li>
          </ol>
      <% end %>
    <% else %>
      <p class='govuk-body'>
        <strong>No result</strong><br>
        The application was not assessed on submission
      </p>
    <% end %>
  </div>
</div>
