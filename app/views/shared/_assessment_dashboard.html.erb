<% add_parent_breadcrumb_link "Home", planning_applications_path %>

<% if current_page?(planning_application_path(@planning_application)) %>
  <% content_for :title, "Application" %>
<% else %>
  <% add_parent_breadcrumb_link "Application", planning_application_path(@planning_application) %>
<% end %>

<%= render(
  partial: "shared/proposal_header",
  locals: { heading: "Application" }
) %>

<% if @planning_application.validation_requests %>
  <% if @planning_application.overdue_requests.present? %>
    <%= render "shared/overdue_banner" %>
  <% end %>
  <% if @planning_application.closed_validation_requests.any? %>
    <%= render "shared/response_banner" %>
  <% end %>
<% end %>
<% if @planning_application.description_change_validation_requests.responded.present? %>
  <%= render "shared/description_response_banner" %>
<% end %>
<% if @planning_application.latest_auto_closed_description_request.present? %>
  <%= render "shared/description_change_auto_closed_banner" %>
<% end %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= yield %>
  </div>
</div>
