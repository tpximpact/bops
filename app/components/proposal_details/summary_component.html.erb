<%= content_tag(
      "li",
      data: {show_hide_target: ("toggleable" if auto_answered?)},
      class: "proposal-detail"
    ) do %>
  <div><p class="govuk-body"><%= "#{index}." %>&nbsp;</p></div>
  <div>
    <p class="govuk-body govuk-!-font-weight-bold"><%= question %></p>
    <p class="govuk-body"><%= response_values.join(", ") %></p>
    <% if show_metadata? %>
      <div>
        <% if notes.present? %>
          <p><em><%= notes %></em></p>
        <% end %>
        <% if auto_answered? %>
          <p><em><%= t(".auto_answered") %></em></p>
        <% end %>
        <%= formatted_policy_refs %>
      </div>
    <% end %>
  </div>
<% end %>
