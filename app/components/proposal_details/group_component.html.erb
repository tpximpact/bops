<%= content_tag(
      "div",
      data: {
        show_hide_target: ("toggleable" if auto_answered?)
      }
    ) do %>
  <div class="flex-between">
    <h4 class="govuk-heading-s" id="<%= id %>"><%= title %></h4>
    <div>
      <%= render(
            partial: "shared/back_to_top_link",
            locals: {target_id: "#proposal-details-section"}
          ) %>
    </div>
  </div>
  <ul class="govuk-body proposal-details-sub-list">
    <% group.proposal_details.each do |proposal_detail| %>
      <%= render(
            ProposalDetails::SummaryComponent.new(proposal_detail: proposal_detail)
          ) %>
    <% end %>
  </ul>
<% end %>
