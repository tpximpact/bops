<% if @validation_requests[:additional_document].present? %>
  <li id="additional-document-validation-requests">
    <h3 class="app-task-list__section">
      Provide new or missing documents
    </h3>
    <ul class="govuk-task-list">
      <% @validation_requests[:additional_document].each do |validation_request| %>
        <li class="govuk-task-list__item govuk-task-list__item--with-link">
          <div class="govuk-task-list__name-and-hint">
            <% if validation_request.open? %>
              <%= govuk_link_to "Upload new document", edit_additional_document_validation_request_path(validation_request.id, access_control_params) %>
            <% else %>
              <%= govuk_link_to "Upload new document", additional_document_validation_request_path(validation_request.id, access_control_params) %>
            <% end %>
          </div>

          <%= render "validation_request_status", validation_request: validation_request %>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>
