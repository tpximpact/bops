<%= form_with model: @decision do |form| %>
  <%= form.govuk_error_summary %>

  <%= form.govuk_text_field :description, label: {text: t(".description_label")}, hint: {text: t(".description_hint")} %>

  <%= form.govuk_collection_radio_buttons :code,
        Decision.codes, :first, ->((k)) { t(".codes.#{k}") },
        legend: {text: t(".code_label")}, hint: {text: t(".code_hint")} %>

  <%= form.govuk_collection_radio_buttons :category,
        Decision.categories, :first, ->((k)) { t(".category_labels.#{k}") },
        legend: {text: t(".category_legend")}, hint: {text: t(".category_hint")},
        small: false, class: "govuk-!-column-count-2" %>

  <%= form.govuk_submit(t(".save_decision")) do %>
    <%= govuk_button_link_to t("back"), :decisions, secondary: true %>
  <% end %>
<% end %>
