<% content_for :page_title do %>
  Preview Notify letter - <%= t("page_title", default: "BOPS Admin") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Edit GOV.UK Notify settings", edit_local_authority_notify_path(@local_authority) %>

<%= form_with(
      model: @letter_preview,
      url: preview_letter_local_authority_notify_path(@local_authority),
      method: :post,
      builder: GOVUKDesignSystemFormBuilder::FormBuilder
    ) do |f| %>
  <%= render "letter_preview_form", f: f %>
<% end %>
