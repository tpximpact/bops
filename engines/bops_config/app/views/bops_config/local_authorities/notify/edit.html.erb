<% content_for :page_title do %>
  <%= t(".notify") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Local authorities", local_authorities_path %>
<% add_parent_breadcrumb_link @local_authority.short_name, local_authority_path(@local_authority) %>

<% content_for :title, t(".notify") %>

<% if flash[:success] %>
  <div class="govuk-notification-banner govuk-notification-banner--success" role="alert">
    <div class="govuk-notification-banner__content">
      <p class="govuk-notification-banner__heading">
        <%= flash[:success] %>
      </p>
    </div>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="govuk-notification-banner govuk-notification-banner--error" role="alert">
    <div class="govuk-notification-banner__content">
      <p class="govuk-notification-banner__heading">
        <%= flash[:error] %>
      </p>
    </div>
  </div>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t(".notify") %>
    </h1>

    <%= render "form" %>
  </div>
</div>
