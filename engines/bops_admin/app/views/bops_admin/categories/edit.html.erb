<% content_for :page_title do %>
  <%= t(".edit_category") %> - <%= t("page_title") %>
<% end %>

<% add_parent_breadcrumb_link "Home", root_path %>
<% add_parent_breadcrumb_link "Policies", policies_path %>
<% add_parent_breadcrumb_link "Categories", categories_path %>

<% content_for :title, t(".edit_category") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    <%= render "side_navigation" %>
  </div>
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-l">
      <%= t(".edit_category") %>
    </h1>

    <%= form_with model: @category, url: category_path(@category), scope: :category do |form| %>
      <%= render "form", form: form %>
    <% end %>
  </div>
</div>
