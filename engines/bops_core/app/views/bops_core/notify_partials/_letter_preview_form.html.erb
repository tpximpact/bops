<%= f.govuk_error_summary %>

<%= f.hidden_field :letter_template_id %>

<%= f.govuk_fieldset legend: {text: "Recipient address"} do %>
  <%= f.govuk_text_field :address_line_1, label: {text: "Address line 1"} %>
  <%= f.govuk_text_field :address_line_2, label: {text: "Address line 2"} %>
  <%= f.govuk_text_field :address_line_3, label: {text: "Address line 3"} %>
  <%= f.govuk_text_field :address_line_4, label: {text: "Address line 4"} %>
  <%= f.govuk_text_field :address_line_5, label: {text: "Address line 5"} %>
  <%= f.govuk_text_field :address_line_6, label: {text: "Address line 6"} %>
  <%= f.govuk_text_field :address_line_7, label: {text: "Address line 7"} %>
<% end %>

<%= f.govuk_text_field(
      :heading,
      label: {text: "Heading"}
    ) %>

<%= f.govuk_text_area(
      :message,
      label: {text: "Message (main letter content)"},
      rows: 8
    ) %>

<%= f.govuk_submit "Preview letter" %>
<%= back_link %>
