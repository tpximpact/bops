<%= render @enforcement, with_dates: true, with_assignment: true, title: "Check breach report" %>

<div class="govuk-!-margin-top-5">
  <%= govuk_task_list(id_prefix: "breach-report") do |task_list| %>
    <% @task.tasks.each do |task| %>
        <%= task_list.with_item(
              title: task.name,
              href: edit_task_path(@case_record, task),
              status: task_status_tag(task)
            ) %>
      <% end %>
    <% end %>

  <div>
    <%= govuk_button_link_to "Back", enforcement_path(@enforcement), secondary: true, class: "govuk-!-margin-bottom-3 govuk-!-margin-top-4" %>
  </div>

  <div>
    <%= govuk_button_link_to "Close the case", task_path(@case_record, "close-case"), warning: true %>
  </div>

</div>
