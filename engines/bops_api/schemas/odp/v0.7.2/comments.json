{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "results": {
          "type": "integer"
        },
        "totalResults": {
          "type": "integer"
        },
        "page": {
          "type": "integer"
        },
        "from": {
          "type": "integer"
        },
        "to": {
          "type": "integer"
        },
        "totalPages": {
          "type": "integer"
        }
      },
      "required": ["results", "totalResults", "page", "from", "to", "totalPages"]
    },
    "links": {
      "type": "object",
      "properties": {
        "first": {
          "type":"string"
        },
        "last": {
          "type":"string"
        },
        "prev": {
          "type":["string", "null"]
        },
        "next": {
          "type":["string", "null"]
        }
      }
    },
    "data": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "url"
            },
            "type": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                 "id": {
                  "type":"string"
                 },
                 "text": {
                  "type":"string"
                 },
                 "sentiment": {
                  "type": "string"
                 },
                 "receivedAt": {
                  "type": "string"
                 }
                },
                "required": ["id", "text", "sentiment", "receivedAt"]
              }
            }
          }
        }
      ]
    }
  },
  "required": ["metadata", "data"]
}